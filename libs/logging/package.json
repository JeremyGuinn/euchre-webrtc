{
  "name": "@euchre/logging",
  "version": "1.0.0",
  "description": "Enterprise-grade logging framework for frontend applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src tests",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "logging",
    "frontend",
    "typescript",
    "structured-logging",
    "enterprise"
  ],
  "author": "Euchre Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist"
  ]
}
